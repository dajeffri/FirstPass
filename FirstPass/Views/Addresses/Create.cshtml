@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" asp-controller="Addresses">
            <div class="form-group">
                <label class="control-label">Address</label>
                <input type="text" class="form-control" name="fullAddress" placeholder="Scan Address" 
                       pattern="[^,]+,[^,]+,[^,]+,[^,]+,[^,]+,\s*[0-9]+" autofocus required
                       title="Must be six comma separated values. Name, Address1, Address2, City, State, 12345"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                @TempData["Message"]
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
